@using System.Security.Claims
@{
    var titulo = ViewData["Title"] ?? "CupcakeStore";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@titulo - CupcakeStore</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

@{
    var nomeUsuario = User.Identity.IsAuthenticated
    ? User.FindFirst(ClaimTypes.Name)?.Value ?? "Conta"
    : "";
}

<body class="d-flex flex-column min-vh-100 bg-light">
    <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">🧁 CupcakeStore</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="menu" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" href="/Cupcakes">🧁 Catálogo</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Carrinho">🛒 Carrinho</a>
                    </li>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                👤 @nomeUsuario
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li><a class="dropdown-item" href="/Pedidos">📦 Meus Pedidos</a></li>
                                <li><a class="dropdown-item text-danger" href="/Login/Logout">🚪 Sair</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="/Login">🔑 Entrar</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4 flex-fill">
        @RenderBody()
    </main>

    <footer class="text-center py-3 mt-auto" style="background-color:#5a2a27; color:#fff;">
        <p class="mb-0">© @DateTime.Now.Year Cupcake Store - Delícias em cada mordida!</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
</body>

</html>
<style>
    .navbar-custom {
        background-color: #ffb6c1;
        font-family: 'Segoe UI', sans-serif;
    }

    .navbar-brand {
        color: #5a2a27 !important;
        font-size: 1.6rem;
    }

    .navbar-nav .nav-link {
        color: #5a2a27 !important;
        font-weight: 600;
        padding: 0.6rem 1rem;
        transition: background-color 0.2s, color 0.2s;
        border-radius: 5px;
    }

    .navbar-nav .nav-link:hover {
        background-color: #f0a6b0;
        color: white !important;
    }

    .dropdown-menu {
        font-size: 0.95rem;
    }

    .dropdown-item:hover {
        background-color: #ffd3db;
        color: #5a2a27;
    }
</style>