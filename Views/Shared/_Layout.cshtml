@using System.Security.Claims
@{
    var titulo = ViewData["Title"] ?? "Cupcake Delícia";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@titulo - Cupcake Delícia</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>

@{
    var nomeUsuario = User.Identity.IsAuthenticated
    ? User.FindFirst(ClaimTypes.Name)?.Value ?? "Conta"
    : "";

    var carrinho = Context.Session.GetObjectFromJson<List<CarrinhoItem>>("CARRINHO");
    var totalItensCarrinho = carrinho?.Sum(x => x.Quantidade) ?? 0;
    ViewBag.ItensCarrinho = totalItensCarrinho;
}

<body class="d-flex flex-column min-vh-100 bg-light">
    <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">🧁 Cupcake Delícia</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#menu">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div id="menu" class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item position-relative">
                        <a href="/Carrinho/Index" class="nav-link cart-link">
                            <i class="bi bi-bag-heart-fill cart-icon"></i>
                            <span class="cart-text ms-1">Carrinho</span>
                            @if (ViewBag.ItensCarrinho > 0)
                            {
                                <span class="cart-badge">@ViewBag.ItensCarrinho</span>
                            }
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <main class="container py-4 flex-fill">
        <nav class="mb-3 border-bottom pb-2 text-brown">
            <ul class="nav justify-content-center">
                <li class="nav-item"><a class="nav-link text-brown" href="/Cupcakes/Home">Home</a></li>
                <li class="nav-item"><a class="nav-link text-brown" href="/Cupcakes/Index">Cupcakes</a></li>
                <li class="nav-item"><a class="nav-link text-brown" href="/Cupcakes/Contato">Contato</a></li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link text-brown dropdown-toggle" href="#" id="userDropdown" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            @nomeUsuario
                        </a>
                        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                            <li><a class="dropdown-item" href="/Pedidos/Index">Meus Pedidos</a></li>
                            <li><a class="dropdown-item text-danger" href="/Login/Logout">Sair</a></li>
                        </ul>
                    </li>
                }
                else
                {
                    <li class="nav-item text-brown">
                        <a class="nav-link" href="/Login/Index">Minha Conta</a>
                    </li>
                }
            </ul>
        </nav>
        @RenderBody()
    </main>

    <footer class="text-center py-3 mt-auto" style="background-color:#5a2a27; color:#fff;">
        <p class="mb-0">© @DateTime.Now.Year Cupcake Delícia - Delícias em cada mordida!</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js"></script>
</body>

</html>
<style>
    .navbar-custom {
        background-color: #ffb6c1;
        font-family: 'Segoe UI', sans-serif;
    }

    .navbar-brand {
        color: #5a2a27 !important;
        font-size: 1.6rem;
    }

    .navbar-nav .nav-link {
        color: #5a2a27 !important;
        font-weight: 600;
        padding: 0.6rem 1rem;
        transition: background-color 0.2s, color 0.2s;
        border-radius: 5px;
    }

    .navbar-nav .nav-link:hover {
        background-color: #f0a6b0;
        color: white !important;
    }

    .dropdown-menu {
        font-size: 0.95rem;
    }

    .dropdown-item:hover {
        background-color: #ffd3db;
        color: #5a2a27;
    }

    .nav-link,
    .nav-link:visited {
        color: #5a2a27 !important;
    }

    .nav-link:hover,
    .nav-link:focus,
    .nav-link:active,
    .nav-link.show,
    .nav-link.dropdown-toggle {
        color: #3b1b19 !important;
    }

    .dropdown-item {
        color: #5a2a27 !important;
    }

    .dropdown-item:hover,
    .dropdown-item:focus {
        background-color: #f9eaea !important;
        color: #5a2a27 !important;
    }

    .nav-link:focus,
    .dropdown-item:focus {
        outline: none !important;
        box-shadow: none !important;
    }

    .btn-brown {
        background-color: #5a2a27;
        color: #fff !important;
        transition: 0.2s;
    }

    .btn-brown:hover {
        background-color: #3b1b19;
    }

    .bg-pink {
        background-color: #ffb6c1 !important;
        color: #5a2a27;
        font-size: 0.75rem;
    }

    /* 🌸 Ícone lindo, estilizado e animado */
    .cart-link {
        position: relative;
        color: #5a2a27 !important;
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 4px;
        transition: all 0.3s ease;
    }

    .cart-link:hover {
        color: #d63384 !important;
        /* rosa vibrante */
        transform: scale(1.05);
        text-shadow: 0 0 10px rgba(214, 51, 132, 0.3);
    }

    .cart-icon {
        font-size: 1.4rem;
        color: #ffb6c1;
        filter: drop-shadow(0 0 2px #5a2a27);
        transition: all 0.3s ease;
    }

    .cart-link:hover .cart-icon {
        color: #d63384;
        transform: rotate(-10deg) scale(1.1);
        filter: drop-shadow(0 0 8px #d63384);
    }

    .cart-text {
        font-size: 1rem;
        letter-spacing: 0.5px;
    }

    .cart-badge {
        position: absolute;
        top: -6px;
        right: -10px;
        background-color: #d63384;
        color: #fff;
        border-radius: 50%;
        font-size: 0.7rem;
        min-width: 20px;
        height: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 0 5px;
        font-weight: 600;
        box-shadow: 0 0 4px rgba(0, 0, 0, 0.2);
        animation: pulseBadge 1.5s infinite ease-in-out;
    }


    @@keyframes pulseBadge {

        0%,
        100% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.2);
        }
    }
</style>