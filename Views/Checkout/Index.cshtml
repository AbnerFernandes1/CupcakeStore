@{
    ViewData["Title"] = "Finalizar Pedido";
    var cliente = ViewBag.Cliente as CupcakeStore.Models.Cliente;
    var endereco = ViewBag.Endereco as CupcakeStore.Models.Endereco;
}

<h3 class="text-brown mb-3 text-center">Finalizar Compra</h3>

<form method="post" asp-action="Finalizar">
    <div class="row">
        <div class="col-md-6">
            <h5 class="text-brown">Dados do Cliente</h5>
            <div class="mb-2">
                <label>Nome</label>
                <input name="nome" class="form-control" required value="@cliente?.Nome" />
            </div>
            <div class="mb-2">
                <label>Email</label>
                <input name="email" type="email" class="form-control" required value="@cliente?.Email" />
            </div>
            <div class="mb-2">
                <label>Telefone</label>
                <input name="telefone" class="form-control" required value="@cliente?.Telefone" />
            </div>
        </div>
        <div class="col-md-6">
            <h5 class="text-brown">Endereço de Entrega</h5>
            <div class="mb-2"><label>Rua</label><input name="rua" class="form-control" required value="@endereco?.Rua" /></div>
            <div class="mb-2"><label>Número</label><input name="numero" class="form-control" required value="@endereco?.Numero" /></div>
            <div class="mb-2"><label>Bairro</label><input name="bairro" class="form-control" required value="@endereco?.Bairro" /></div>
            <div class="mb-2"><label>Cidade</label><input name="cidade" class="form-control" required value="@endereco?.Cidade" /></div>
            <div class="mb-2"><label>UF</label><input name="uf" maxlength="2" class="form-control" required value="@endereco?.UF" /></div>
            <div class="mb-2"><label>CEP</label><input name="cep" class="form-control" required value="@endereco?.CEP" /></div>
            <div class="mb-2"><label>Complemento</label><input name="complemento" class="form-control" required value="@endereco?.Complemento" /></div>
        </div>
    </div>

    <div class="mt-4">
        <h5 class="text-brown">Forma de Pagamento</h5>
        <select name="formaPagamento" class="form-select w-50" required>
            <option value="">Selecione</option>
            <option>Cartão de Crédito</option>
            <option>PIX</option>
            <option>Boleto</option>
        </select>
    </div>

    <div class="text-end mt-4">
        <button type="submit" class="btn btn-brown">Confirmar Pedido</button>
    </div>
</form>

<style>
    .text-brown { color:#5a2a27; }
    .btn-brown { background-color:#5a2a27; color:#fff; }
</style>
